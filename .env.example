# MediaHeist Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Job Control
# =============================================================================
MAX_JOBS=4

# =============================================================================
# Google Gemini API Configuration
# =============================================================================
# Required: Your Google AI API key from https://aistudio.google.com/
GEMINI_API_KEY=your_api_key_here

# Model to use for summarization (recommended: gemini-2.5-pro)
GEMINI_MODEL_ID=gemini-2.5-pro

# API endpoint (usually no need to change)
GOOGLE_GEMINI_HOST=https://generativelanguage.googleapis.com/v1beta/models

# Chunking settings for large files
MAX_SAFE_SIZE_KB=150  # Max size per chunk to avoid API limits
MAX_RETRIES=3         # Number of retry attempts
API_TIMEOUT=900       # Max timeout in seconds (15 minutes)

# =============================================================================
# Whisper Configuration
# =============================================================================
WHISPER_BIN=whisper.cpp/build/bin/whisper-cli
WHISPER_MODEL=whisper.cpp/models/ggml-large-v3-turbo-q5_0.bin